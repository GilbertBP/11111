def is_prime(number):
    if number <= 1:
        return False

    for i in range(2, int(number**0.5) + 1):
        if number % i == 0:
            return False

    return True

# Пример использования функции
num = int(input("Введите число для проверки: "))
if is_prime(num):
    print(num, "является простым числом.")
else:
    print(num, "не является простым числом.")
